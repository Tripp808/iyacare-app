# IyàCare Environment Configuration
# Copy this file to .env.local and update with your actual credentials

# Firebase Configuration
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Realtime Database URL
# Format: https://your_project-default-rtdb.firebaseio.com/
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com/

# AI Service Configuration
# URL where your AI prediction service is running
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000
NEXT_PUBLIC_AI_MODEL_URL=https://your-ai-model.onrender.com
NEXT_PUBLIC_AI_MODEL_API_KEY=your_ai_model_api_key_here

# Blockchain Configuration
# Sepolia Testnet Configuration
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_SEPOLIA_CONTRACT_ADDRESS=0xE4537A9592C0a25c393B75aff8DEfE3e9190C6b7
NEXT_PUBLIC_NETWORK_ID=11155111
NEXT_PUBLIC_BLOCKCHAIN_ENABLED=true

# Server-side Blockchain Configuration (NEVER COMMIT TO GIT)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
PRIVATE_KEY=your_wallet_private_key_here

# Optional: Twilio SMS Configuration
# Get these from your Twilio console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional: Email Service Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email_username
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@yourapp.com

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security & Monitoring
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
ANALYTICS_ID=your_analytics_tracking_id
SENTRY_DSN=your_error_tracking_dsn
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Site URL - IMPORTANT for email verification in production
# Use localhost for development, your domain for production
NEXT_PUBLIC_SITE_URL=https://www.iyacare.site

# Twilio Configuration (SMS Service)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# App Configuration
NEXT_PUBLIC_APP_NAME=IyàCare

# Blockchain Configuration (Ethereum Sepolia Testnet)
# Get these from Alchemy/Infura and your MetaMask wallet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key
PRIVATE_KEY=your_metamask_private_key_for_deployment
ETHERSCAN_API_KEY=your_etherscan_api_key_for_verification

# Contract Addresses (Will be set after deployment)
NEXT_PUBLIC_SEPOLIA_CONTRACT_ADDRESS=your_deployed_contract_address
NEXT_PUBLIC_NETWORK_ID=11155111

# Blockchain Settings
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true
NEXT_PUBLIC_BLOCKCHAIN_NETWORK=sepolia 